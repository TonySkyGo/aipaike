/* pages/gladdress/gladdress.wxss */

.selected-border {
  border: 1px solid #fe4a10;
}

.gladdress-title {
  background: #fff;
  margin: 28rpx 0;
  height: 112rpx;
  line-height: 112rpx;
  padding: 0 38rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.gladdress-title .text {
  float: left;
  font-size: 28rpx;
  color: #000;
}

.gladdress-title .dw_icon {
  width: 37rpx;
  height: 44rpx;
  float: left;
  padding-top: 33rpx;
  padding-right: 18rpx;
}

.gladdress-title  .y-right {
  width: 14rpx;
  height: 28rpx;
  float: right;
  padding-top: 39rpx;
}

/*yes*/

.flag-address {
  box-sizing: border-box;
  position: relative;
  width: 718rpx;
  margin: 0 auto;
  border-radius: 6px;
  overflow: hidden;
  background: #fff;
}

.items-per-num {
  margin-bottom: 15rpx;
}

.items-per-num text:nth-of-type(1) {
  padding-right: 105rpx;
}

.yes-address text {
  font-size: 26rpx;
  /*color: #878787;*/
}

.detail-address text {
  display: inline-block;
  vertical-align: top;
}

.detail-address text:nth-of-type(2) {
  width: 495rpx;
  word-break: break-all;
  line-height: 45rpx;
}

.flag-address .yes-address {
  background: #fff;
  padding: 44rpx 24rpx;
  box-sizing: border-box;
}

.mr-bar {
  border-top: 1px solid #f2f2f2;
  background: #fff;
  display: flex;
  padding: 24rpx;
  font-size: 26rpx;
  justify-content: space-between;
  color: #585858;
  width: 680rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

