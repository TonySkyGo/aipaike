page {
  background: #fdfdfd;
}

.nearshop_top {
    display: flex;
    flex-direction: row;
    padding: 50rpx 30rpx;
    border-top: solid 2rpx #eee;
    background: #fff;
}

.nearshop_image {
  width: 46%;
}

.nearshop_image image {
  width: 100%;
}

.nearshop-name {
  width: 54%;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.nearshop-name text {
  display: block;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #222;
}

.nearshop-name view {
  font-size: 26rpx;
  color: #555;
  line-height: 40rpx;
}

.nearshop-name view icon {
  float: left; 
  display: block;
  width: 10rpx;
  height: 10rpx;
  background: url(http://img.aipaike.com/group1/M00/10/34/Cvv7ZVlSBd6AUzjdAAAA3tuiBCc035.png) no-repeat;
  background-size: contain;
  margin: 15rpx 8rpx 0 0;
}

.nearshop-info {
  font-size: 30rpx;
  padding: 0 40rpx 30rpx;
  box-shadow: 0 10px 24px 0 rgba(217,226,232,0.50);
  margin-bottom: 60rpx;
}

.nearshop_box {
  margin: 0 40rpx 0 50rpx;
  line-height: 40rpx;
  position: relative;
  height: 160rpx;
  overflow: hidden;
  padding-left: 100rpx;
  padding-top: 10rpx;
}

.nearshop_box text {
  font-size: 28rpx;
  color: #555;
}

.nearshop_box icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.nearshop_address icon {
  background: url(http://img.aipaike.com/group1/M00/10/36/Cvv7ZVlTGuCASHlEAAAH3l5RJ8g920.png) no-repeat;
  background-size: contain;
}

.nearshop_address text {
  padding-right:30rpx;
  display: inline-block;
}

.nearshop_time icon {
  background: url(http://img.aipaike.com/group1/M00/10/36/Cvv7ZVlTGuCAYS41AAAI5UL1Kso290.png) no-repeat;
  background-size: contain;
}

.nearshop_phone icon {
  background: url(http://img.aipaike.com/group1/M00/10/36/Cvv7ZVlTGyWAIqlDAAAHIscOmiI244.png) no-repeat;
  background-size: contain;
}

.nearshop-right {
  position: absolute;
  right: 0;
  top: 20rpx;
  background: url(http://img.aipaike.com/group1/M00/10/22/Cvv7ZVk2WseAWqeiAAACO0Fd_fA521.png) no-repeat;
  background-size: contain;
  display: block;
  width: 14rpx;
  height: 28rpx;
}

.nearshop-line {
  position: absolute;
  top: 64rpx;
  left: 30rpx;
  height: 110rpx;
  border-right: dashed 2rpx #9e9e9e;
  display: block;
  width: 0;
  overflow: hidden;
}