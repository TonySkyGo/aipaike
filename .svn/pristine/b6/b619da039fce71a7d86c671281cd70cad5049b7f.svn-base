  NearBlur(event) {
    var that = this;
    if (event.detail.value != '' || event.detail.value == undefined) {
      setTimeout(function () {
        /** 
             * 获取用户位置信息 
             */
        if ( event.detail.value == undefined){
          var keyword= '';
        } else {
          keyword = event.detail.value
        }
        wx.getLocation({
          type: 'wgs84',
          success: function (res) {
            var latitude = res.latitude
            var longitude = res.longitude

            wx.request({//附近门店
              url: app.globalData.apkBase + '/api/product/near.jhtml?lng=' + longitude + '&lat=' + latitude + '&storeName=' + keyword,
              method: 'GET',
              success: function (res) {
                if (keyword == '') {
                  that.setData({
                    searchNearShop: ''
                  })
                }
                if (res.data.content.length < 1) {
                  that.setData({
                    noNearShop: '暂时没有找到相关信息，为您推荐离您最近店铺',
                    lodingmore: 'none',
                    searchNearShop: ''
                  })
                } else {
                  that.setData({
                    listNearShop: [],
                    listNearShop: res.data.content,
                    lodingmore: 'none'
                  })
                }
              },
              fail: function () {
                // fail  
              },
              complete: function () {
                // complete  
              }
            })
          },
          fail: function () {
            // fail  
          },
          complete: function () {
            // complete  
          }
        });
        that.setData({
          loadingHidden: true
        });
       
      }, 1000);
    }
  },
