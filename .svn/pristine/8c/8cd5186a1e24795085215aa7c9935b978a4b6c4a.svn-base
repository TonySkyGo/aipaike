/* pages/searchs/searchs.wxss */
page {
  background: #fff;
  border-top:1px solid #eee;
}

.search-input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 27rpx 24rpx;
  border-bottom: 1px solid #f4f4f4;
}

.search-input view {
  position: relative;
}

.search-input view, .search-input input {
  width: 612rpx;
  height: 62rpx;
}

.search-input input {
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #898989;
  padding-left: 53rpx;
  /*padding-top: 4rpx;*/
  box-sizing: border-box;
}

.search-image-icon {
  width: 33rpx;
  height: 33rpx;
}

.search-image-icon {
  position: absolute;
  left: 10rpx;
  top: 16rpx;
}

.close-img-icon {
  position: absolute;
  right: 10rpx;
  top: 19rpx;
  z-index: 10;
  width: 26rpx;
  height: 26rpx;
}

.search-input .cancel {
  padding-top: 8rpx;
  color: #fb2f2e;
  font-size: 30rpx;
}

/*热缩开始*/
@import "../common-template/hot-select-template/hot-select-template.wxss";

/*热缩结束*/

/*历史开始*/

.history-bar {
  padding-top: 34rpx;
}

.history-desc {
  position: relative;
  padding-bottom: 17rpx;
  border-bottom: 1px solid #f0f0f0;
}

.history-desc text {
  font-size: 26rpx;
  color: #999;
}

.history-desc .close-img-icon {
  right: 0;
}

.clear-history-flag {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 62rpx auto 0;
  border: 1px solid #f0f0f0;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.clear-history-flag text {
  vertical-align: middle;
}

.del-icon {
  width: 26rpx;
  height: 32rpx;
  padding: 0 10px 0 0;
  vertical-align: middle;
}

/*搜索列表开始*/

.list-four-title {
  width: 750rpx;
  background: #fff;
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}

.list-four-title view {
  width: 25%;
  text-align: center;
}

.list-four-title image {
  width: 18rpx;
  height: 26rpx;
  margin-left: 5px;
}

.list-four-title view text {
  padding-bottom: 16rpx;
}

.list-four-title  .sel text{
  border-bottom: 1px solid #fe4a10;
    color:#FE4A10;
}

#sxSelect {
  width: 8px;
  height: 4px;
  vertical-align: top;
  margin-top: 13px;
}

/*商品列表模板开始*/
@import "../common-template/goods-list-template/goods-list-template.wxss";

/*筛选开始*/

.slide-bar {
  width: 582rpx;
  height: 1334rpx;
  background: #fff;
  position: fixed;
  right: -582rpx;
  top: 0;
  bottom: 0;
  z-index: 11;
  padding: 24rpx 24rpx 0;
  box-sizing: border-box;
}

.slide-bar .hot-bar {
  padding: 20rpx 0 0;
}

.slide-bar .hot-bar+.hot-bar {
  /*border-top: 1px solid #e6e6e6;
  margin-top: 32rpx;*/
}

.reset-sure {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  margin-top: 100rpx;
  justify-content: space-between;
}

.reset-sure .reset {
  border: 1px solid #fb2f2e;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-right: 24rpx;
  color: #fb2f2e;
}

.reset-sure .sure {
  background: #fb2f2e;
  color: #fff;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.slide-bar .sx-title {
  color: #343434;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 15rpx;
}

.slide-bar .hot-history-title {
  padding-bottom: 20rpx;
}

.c-state1 {
  transition: all 1s ease-in-out;
  transform: rotate(0deg) scale(1) translate(-582rpx, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(-582rpx, 0%);
}

.slide-bar  .slide-tit-xsd{
  color:#8c8c8c;
  font-size:28rpx;
  padding:30rpx 0;
}

.no-search-record{
  padding:0 0 30rpx 20rpx; 
  font-size:26rpx;
  color:#999;
}

.slide-bar .clearfix{
  border-bottom:1px solid #f8f8f8;
  padding-bottom: 12rpx;
}

.slide-bar .hot-bar .hot-desc {
  width:auto;
  padding:0 16rpx;
}

.slide-bar .sel-border .hot-desc{
  border:1px solid #fb2f2e;
}
