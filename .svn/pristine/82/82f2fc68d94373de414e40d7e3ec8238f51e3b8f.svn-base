/* pages/address/address.wxss */

.add-address-container{
    padding:70rpx 40rpx 0;
    background: #fff;
    margin-top: 26rpx;
    font-size: 26rpx;
    height: 100%;
}

.common-border{
    border-bottom: 1px solid #f2f2f2;
    padding-bottom: 12rpx;
    height:60rpx;
    line-height: 60rpx;
    margin-bottom: 16rpx;
}

.common-border input{
    width: 400rpx;
    display: inline-block;
    vertical-align: middle;
    font-size: 26rpx;
    padding-left: 10rpx;
    box-sizing: border-box;
}

.saveUse{
    width: 600rpx;
    height: 78rpx;
    line-height: 78rpx;
    margin: 90rpx auto 0;
    background: #FB2F2E;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    border-radius: 5px;
}

.switch-btn{
    width: 100rpx;

}

/*pinck组件*/
.picker-view {
    position: fixed;
    left: 0;
    bottom: 0;
}
.addr-item {
    line-height: 50px;
    text-align: center;
}

.show {
    text-align: center;
    margin: 20px;
    height: 50px;
}
.choose {
    margin: 20px 0;
}





